<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/stateProgressCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <com.kofigyan.stateprogressbar.StateProgressBar
            android:id="@+id/paymentStateProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:spb_checkStateCompleted="true"
            app:spb_currentStateDescriptionColor="@color/shopingguruPink"
            app:spb_currentStateNumber="one"
            app:spb_maxStateNumber="three"
            app:spb_stateBackgroundColor="@color/shopingguruGray"
            app:spb_stateDescriptionColor="@color/shopingguruGray"
            app:spb_stateForegroundColor="@color/shopingguruBlue"
            app:spb_stateNumberBackgroundColor="@color/White"
            app:spb_stateNumberForegroundColor="@color/shopingguruPink" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/nextCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/nextBuyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="next" />
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/buyNowFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/nextCardView"
        android:layout_below="@id/stateProgressCardView"
        android:layout_marginBottom="10dp"></FrameLayout>

</RelativeLayout>