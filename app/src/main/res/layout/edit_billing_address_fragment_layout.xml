<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/billingAddEditTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="cursive"
        android:padding="10dp"
        android:text="Billing Address"
        android:textColor="@color/Black"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/cancelAddEditingImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/ic_cancel_black_24dp" />

    <TextView
        android:id="@+id/jsonResponseAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/billingAddEditTitleTextView"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="JSON Response"
        android:textColor="@color/Red"
        android:textSize="18dp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/jsonResponseAddressTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">


            <EditText
                android:id="@+id/firstNameBillingAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="First Name"
                android:inputType="text"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/lastNameBillingAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Last Name"
                android:inputType="text"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/comapnyNameBillingAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Company Name"
                android:inputType="text"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/emailBillingAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/phoneBillingAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Phone"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/vastssnBillingAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="VAT/SSN"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/addressBillingAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/apartmentNameBillingAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Apartment, suite, unit, etc."
                android:inputType="textPostalAddress"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/cityNameBillingAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Town/City"
                android:inputType="text"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/stateNameBillingAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="State"
                android:inputType="text"
                android:paddingLeft="20dp" />

            <EditText
                android:id="@+id/postcodeBillingAddEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_edit_text_bg"
                android:hint="Postcode / ZIP"
                android:inputType="number"
                android:paddingLeft="20dp" />

            <Button
                android:id="@+id/editBillingAddButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_button_new"
                android:text="Edit Shipping Address" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>