<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/orderIdDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/orderItemNameDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/orderQuantityDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Quantity"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/orderTotalDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Total"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/orderDateDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/orderStatusDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Order Status"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/orderVar1DetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Variation 1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/orderVar1ValueDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Variation 1 Value"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/orderVar2DetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Variation 2"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/orderVar2ValueDetailsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Variation 2 vlaue"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:visibility="gone" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>